{% extends 'MainBundle:Default:base.html.twig' %}

{% block wrap_class %}contacts-main{% endblock %}


{% block content %}
    <section class="contacts-block mbox2">
        <div class="contacts-wrap">
            <div id="map" class="map"></div>
            <div class="contacts">
                <h1>Контакты</h1>
                <div class="contacts-inner">
                    {% if contact.address is defined %}
                    <div class="contact-item contact-adress-wrap">
                        <div class="contact-icon">
                            <img src="/images/marker-icon.png" alt="marker">
                        </div>
                        <div class="contact-adress">
                            <p>{{ contact.address }}</p>
                            <span>{{ contact.work_time }}</span>
                        </div>
                    </div>
                    {% endif %}
                    {% if contact.phone_1 is defined or contact.phone_2 is defined %}
                    <div class="contact-item contact-tel-wrap">
                        <div class="contact-icon">
                            <img src="/images/tel-icon.png" alt="tel">
                        </div>
                        <div class="contact-tel">
                            {% if contact.phone_1 is defined %}
                                <a href="tel:{{ contact.phone_1|phone_filter }}">{{ contact.phone_1 }}</a>
                            {% endif %}
                            {% if contact.phone_2 is defined %}
                                <a href="tel:{{ contact.phone_2|phone_filter }}">{{ contact.phone_2 }}</a>
                            {% endif %}
                        </div>
                    </div>
                    {% endif %}
                    {% if contact.email is defined %}
                        <div class="contact-item contact-email-wrap">
                            <div class="contact-icon">
                                <img src="/images/email-icon.png" alt="email">
                            </div>
                            <div class="contact-email">
                                <a href="mailto:{{ contact.email }}">{{ contact.email }}</a>
                            </div>
                        </div>
                    {% endif %}
                </div>
                <div class="contact-form-wrap">
                    <h3>Есть вопросы? Пишите нам!</h3>

                    <form class="contacts-form" action="" method="post" name="contacts">
                        <div class="form-field">
                            <input type="text" class="el-input" name="name" placeholder="Имя" required />
                        </div>
                        <div class="form-field">
                            <input type="email" class="el-input" name="email" placeholder="E-mail" required />
                        </div>
                        <div class="form-field">
                            <input type="text" class="el-input" name="theme" placeholder="Тема" required />
                        </div>
                        <div class="form-field">
                            <textarea class="el-textarea" name="question" placeholder="Вопрос" required></textarea>
                        </div>
                        <button type="submit" class="el-button">Отправить</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock content %}